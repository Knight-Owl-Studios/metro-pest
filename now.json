{
  "version": 2,
  "name": "metro-pest",
  "builds": [
    {
      "src": "web/package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "public"
      }
    },
    {
      "src": "api/email/index.js",
      "use": "@now/node"
    }
  ],
  "env": {
    "CONTACT_RECIPIENT": "@dev-email",
    "SMTP_PASS": "@smtp-pass",
    "SMTP_USER": "@smtp-user",
    "SMTP_HOST": "smtp.gmail.com"
  },
  "alias": [
    "metro-pest.now.sh"
  ],
  "routes": [
    {
      "src": "/api/email/?",
      "dest": "/api/email/index.js"
    },
    {
      "src": "/api/payments/?",
      "dest": "/api/payments.js"
    },
    {
      "src": "/(.*)",
      "dest": "/web/$1"
    }
  ]
}