{
  "version": 2,
  "name": "metro-pest-website",
  "builds": [
    {
      "src": "web/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "public" }
    },
    {
      "src": "api/payments.js",
      "use": "@now/node"
    }
  ],
  "env": {
    "stripe_key": "@stripe_key",
    "stripe_secret": "@stripe_secret",
    "CONTACT_RECIPIENT": "@dev-email",
    "SMTP_PASS": "@smtp-pass",
    "SMTP_USER": "@smtp-user",
    "SMTP_HOST": "smtp.gmail.com"
  },
  "alias": ["metro-pest-website.now.sh"],
  "routes": [
    {
      "src": "/api/payments/?",
      "dest": "/api/payments.js"
    },
    {
      "src": "/(.*)",
      "dest": "/web/$1"
    }
  ]
}
